// Place your settings in this file to overwrite default and user settings.
{
   "files.exclude": {
      "**/_build": true
   },
   "editor.tabSize": 3,
   "editor.insertSpaces": true,
   "editor.detectIndentation": false,
   "files.trimTrailingWhitespace": true,
   "editor.formatOnSave": true,
   "files.associations": {
      "*.ml": "ocaml"
   },
   "[ocaml]": {
      "editor.tabSize": 3,
      "editor.insertSpaces": true
   },
   "ocaml.sandbox": {
      "kind": "global"
   }
}